  "questions": [
    {
      "id": "favorite_color",
      "type": "single_choice",
      "text": "What is your favorite color?",
      "required": true,
      "options": [
        "Red",
        "Blue",
        "Green",
        "Yellow",
        "Purple",
        "Other"
      ]
    },
    {
      "id": "hobbies",
      "type": "multiple_choice",
      "text": "What are your hobbies? (Select all that apply)",
      "required": false,
      "options": [
        "Reading",
        "Sports",
        "Music",
        "Gaming",
        "Cooking",
        "Travel"
      ],
      "validation": {
        "maxSelections": 3
      }
    },
    {
      "id": "programming_languages",
      "type": "multiple_choice",
      "text": "Which programming languages do you know?",
      "required": false,
      "options": [
        "JavaScript",
        "TypeScript",
        "Python",
        "Java",
        "C++",
        "Go",
        "Rust"
      ]
    }
  ]
